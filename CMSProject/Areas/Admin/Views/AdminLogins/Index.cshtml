@model IEnumerable<DataLayer.AdminLogin>

@{
    ViewBag.Title = "مدیریت";
}



<p style="margin-top:35px;">
    @Html.ActionLink("افزودن", "Create",null,new {@class= "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.LoginID },new {@class= "btn btn-warning" }) 
            @Html.ActionLink("حذف", "Delete", new { id=item.LoginID },new { @class= "btn btn-danger" })
        </td>
    </tr>
}

</table>

@model IEnumerable<DataLayer.ContactUs>
@{
    ViewBag.Title = "Contact";
}
<!--Page Title-->
<section class="page-title">
    <div class="pattern-layer-one" style="background-image: url(/Content/images/background/pattern-16.png)"></div>
    <div class="auto-container">
        <h2>تماس با ما</h2>
        <ul class="page-breadcrumb">
            <li><a href="/">صفحه اصلی </a></li>
            <li>تماس با ما</li>
        </ul>
    </div>
</section>
<!--End Page Title-->
<!-- Contact Info Section -->
<section class="contact-info-section">
    <div class="auto-container">
        <!-- Sec Title -->
        @foreach (var item in Model)
        {
            <div class="title-box">
                <div class="title">در تماس باشید</div>
                <h2>هزینه پروژه ماهانه <br> پلن قیمتها</h2>
                <div class="text">برای سوالات عمومی می توانید با تیم پشتیبانی میز جلو تماس بگیرید <br> با ایمیل <a href="mailto:@item.Email">@item.Email</a> در تماس باشید <a href="tel:@item.PhoneNumber">@item.PhoneNumber</a></div>
            </div>

            <div class="row clearfix">

                <!-- Info Column -->
                <div class="info-column col-lg-4 col-md-6 col-sm-12">
                    <div class="inner-column">
                        <div class="content">
                            <div class="icon-box"><span class="flaticon-pin"></span></div>
                            <ul>
                                <li><strong>آدرس </strong></li>
                                <li>@item.Location</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Info Column -->
                <div class="info-column col-lg-4 col-md-6 col-sm-12">
                    <div class="inner-column">
                        <div class="content">
                            <div class="icon-box"><span class="flaticon-phone-call"></span></div>
                            <ul>
                                <li><strong>تلفن </strong></li>
                                <li>@item.PhoneNumber</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Info Column -->
                <div class="info-column col-lg-4 col-md-6 col-sm-12">
                    <div class="inner-column">
                        <div class="content">
                            <div class="icon-box"><span class="flaticon-email-1"></span></div>
                            <ul>
                                <li><strong>ایمیل </strong></li>
                                <li>@item.Email</li>
                            </ul>
                        </div>
                    </div>
                </div>
                

            </div>
            <div class="lower-text">ما در 36 نقطه کشور هستیم, <a href="#">شاخه های ما را ببینید.</a></div>
        }
        </div>
        
</section>
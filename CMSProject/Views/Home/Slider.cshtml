@model IEnumerable<DataLayer.Slider>
<!-- Banner Section -->

<section class="banner-section">
    <div class="main-slider-carousel owl-carousel owl-theme">

        @foreach (var item in Model)
        {
            <div class="slide "  style="background-image:url(/Images/Sliders/@item.ImageName)">
                <div class="patern-layer-one" style="background-image:url(/Content/images/main-slider/pattern-1.png)"></div>
                <div class="patern-layer-two" style="background-image:url(/Content/images/main-slider/pattern-2.png)"></div>
                <div class="auto-container">
                    
                    <div class="content-column">
                        <div class="inner-column">
                            <div class="patern-layer-three" style="background-image: url(Content/images/main-slider/pattern-3.png)"></div>
                            <div class="title">@item.Title </div>
                            <h1>@item.Text </h1>
                            <div class="text"> @item.ShortDescription</div>
                            <div class="btns-box">
                                <a href="@item.url" class="theme-btn btn-style-one"><span class="txt">مطالعه بیشتر</span></a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            
        }
       

    </div>

</section>
<!-- End Banner Section -->
